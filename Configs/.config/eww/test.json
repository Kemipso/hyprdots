    "Resize windows": {
        "binds": [
            {
                "mod": "$mainMod SHIFT",
                "key": "right",
                "dispatcher": "resizeactive",
                "command": "10 0"
            },
            {
                "mod": "$mainMod SHIFT",
                "key": "left",
                "dispatcher": "resizeactive",
                "command": "-10 0"
            },
            {
                "mod": "$mainMod SHIFT",
                "key": "up",
                "dispatcher": "resizeactive",
                "command": "0 -10"
            },
            {
                "mod": "$mainMod SHIFT",
                "key": "down",
                "dispatcher": "resizeactive",
                "command": "0 10"
            }
        ]
    },
