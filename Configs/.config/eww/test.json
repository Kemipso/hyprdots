    "Scroll through existing workspaces with mainMod + scroll": {
        "binds": [
            {
                "mod": "$mainMod",
                "key": "mouse_down",
                "dispatcher": "workspace",
                "command": "e+1"
            },
            {
                "mod": "$mainMod",
                "key": "mouse_up",
                "dispatcher": "workspace",
                "command": "e-1"
            }
        ]
    },
    "Move/resize windows with mainMod + LMB/RMB and dragging": {
        "binds": [
            {
                "mod": "$mainMod",
                "key": "mouse:272",
                "dispatcher": "movewindow"
            },
            {
                "mod": "$mainMod",
                "key": "mouse:273",
                "dispatcher": "resizewindow"
            }
        ]
    },
